<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head %>
    </head>
    <body class="container">

        <header>
            <% include ../partials/header %>
        </header>
        <br>
        <br>
            <% include ../partials/message %>
            <% include ../partials/upload %>
        <main>
          <% for(var i = 0; i < items.length; i += 4) { %>
            <% if(i % 4 == 0) { %>
              <div class="row">
              <% if(items[i] != null) { %>

                  <div class="col-sm-6 col-md-3">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title"><%= items[0]._source.name%><span class="pull-right">$ <%=items[0]._source.price%></span></h3>
                      </div>
                      <div class="panel-body text-center">
                        <img src='/img/<%=items[0]._source.image%>'  style="width:200px; height:150px;">
                        <hr/>
                        <p class="text-center"><button href="#" class="btn btn-primary" data-toggle="modal" data-target="#message">Poke</button>
                        </p>
                      </div>
                    </div>
                  </div>
                <% } %>
                <% if(items[i + 1] != null) { %>
                  <div class="col-sm-6 col-md-3">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title"><%= items[1]._source.name%><span class="pull-right">$ <%=items[1]._source.price%></span></h3>
                      </div>
                      <div class="panel-body text-center">
                        <img src='/img/<%=items[1]._source.image%>' style="width:200px; height:150px;">
                        <hr/>
                        <p class="text-center"><button href="#" class="btn btn-primary" data-toggle="modal" data-target="#message">Poke</button>
                        </p>
                      </div>
                    </div>
                  </div>
                <% } %>
                <% if(items[i + 2] != null) { %>
                  <div class="col-sm-6 col-md-3">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title"><%= items[2]._source.name%><span class="pull-right">$ <%=items[2]._source.price%></span></h3>
                      </div>
                      <div class="panel-body text-center">
                        <img src='/img/<%=items[2]._source.image%>' style="width:200px; height:150px;">
                        <hr/>
                        <p class="text-center"><button href="#" class="btn btn-primary" data-toggle="modal" data-target="#message">Poke</button>
                        </p>
                      </div>
                    </div>
                  </div>
                <% } %>
                <% if(items[i + 3] != null) { %>
                  <div class="col-sm-6 col-md-3">
                    <div class="panel panel-default">
