                        <img src='/img/<%=items[3]._source.image%>' style="width:200px; height:150px;">
                        <hr/>
                        <p class="text-center"><button href="#" class="btn btn-primary" data-toggle="modal" data-target="#message">Poke</button>
                        </p>
                      </div>
                    </div>
                  </div>
                <% } %>
              </div>
            <% } %>
          <% } %>
        </main>

        <footer>
            <% include ../partials/footer %>
        </footer>
    </body>
</html>