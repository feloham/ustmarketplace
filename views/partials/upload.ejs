<!-- views/partials/upload.ejs -->

<div class="modal fade" id="upload" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Upload</h4>
      </div>
      <form role="form" method="post" action="message">
          <div class="modal-body">
              <div class="form-group">
                <textarea placeholder="Description" class="form-control" rows="5" id="message" style="width: 100%; height: 100%; border-color: Transparent; resize:none; outline: none; -webkit-box-shadow: none; -moz-box-shadow: none; box-shadow: none;"></textarea>
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary">Upload</button>
          </div>
      </form>
    </div>
  </div>
</div>